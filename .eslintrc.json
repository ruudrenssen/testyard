{
  "root": true,
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "indent": ["error", 2],
    "quotes": [2, "double", { "avoidEscape": true, "allowTemplateLiterals": true }],
    "semi": [2, "always"]
  }
}
