{
  "name": "testyard",
  "version": "0.1.0",
  "description": "a place to experiment",
  "scripts": {
    "start": "npm run server",
    "dev": "run-p watch",
    "server": "node ./app",
    "clean": "npx rimraf ./static/**/*",
    "lint": "run-p lint:*",
    "lint:scripts": "eslint ./app --ext js --fix",
    "lint:clientJs": "eslint ./source --ext mjs --fix",
    "lint:styles": "stylelint ./source/styles/**/*.css",
    "prebuild": "echo 'start prebuild' && run-p lint clean",
    "build": "run-p build:*",
    "build:scripts": "rollup --config",
    "build:styles": "postcss ./source/styles/main.css --verbose --output ./static/css/main.css",
    "watch": "run-p watch:*",
    "watch:scripts": "npm run build:scripts -- --watch",
    "watch:styles": "npm run build:styles -- --watch",
    "watch:server": "nodemon ./app"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@babel/preset-env": "^7.14.0",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^18.0.0",
    "@rollup/plugin-node-resolve": "^11.2.1",
    "core-js": "^3.11.1",
    "eslint": "^7.25.0",
    "express": "^4.17.1",
    "express-handlebars": "^5.3.0",
    "node-fetch": "^3.2.10",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.13",
    "postcss-cli": "^8.2.0",
    "postcss-csso": "^5.0.1",
    "postcss-import": "^14.0.1",
    "postcss-preset-env": "^6.7.0",
    "rollup": "^2.46.0",
    "rollup-plugin-terser": "^7.0.2",
    "stylelint": "^14.9.1"
  },
  "dependencies": {
    "d3": "^7.6.1"
  }
}
