{
  "name": "testyard",
  "version": "1.0.0",
  "description": "repo to test stuff out",
  "main": "public/index.mjs",
  "scripts": {
    "build": "run-p build:*",
    "build:scripts": "rollup --config",
    "build:styles": "postcss ./source/css/index.css --verbose --output ./public/styles.css",
    "build:static": "shx cp ./source/static/* ./public",
    "clean": "shx rm -rf ./public/* ",
    "dev": "npm run clean & concurrently 'npm:build' 'npm:watch' 'npm:host'",
    "host": "npx http-server --port 8080 -c-1",
    "watch": "run-p watch:*",
    "watch:scripts": "npm run build:scripts -- --watch",
    "watch:styles": "npm run build:styles -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ruudrenssen/testyard.git"
  },
  "author": "Ruud Renssen",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/ruudrenssen/testyard/issues"
  },
  "homepage": "https://github.com/ruudrenssen/testyard#readme",
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^13.1.3",
    "concurrently": "^7.1.0",
    "eslint": "^8.12.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.25.4",
    "http-server": "^14.1.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.12",
    "postcss-cli": "^9.1.0",
    "postcss-csso": "^6.0.0",
    "postcss-import": "^14.1.0",
    "postcss-preset-env": "^7.4.3",
    "rollup": "^2.70.1",
    "shelljs": "^0.8.5",
    "shx": "^0.3.4"
  }
}
